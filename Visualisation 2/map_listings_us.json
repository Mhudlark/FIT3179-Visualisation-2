{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 200,
  "height": 150,
  "background": "#f5f5f5",
  "projection": {
    "type": "albersUsa"
  },
  "layer": [
    {
      "data": {
        "url": "data/us-10m.json",
        "format": {
          "type": "topojson",
          "feature": "states"
        }
      },
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "value": "#d1d1d1e1"
        },
        "tooltip": [
          {
            "field": "properties.boro_name",
            "type": "nominal",
            "title": "Borough"
          }
        ]
      }
    },
    {
      "data": {
        "url": "data/airbnb.csv"
      },
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "longitude": {
          "field": "long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        },
        "size": { "value": 10 },
        "color": { "value": "steelblue" }
      }
    }
  ]
}
